{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",  
    "paths": {
      "@routes/*": ["src/routes/*"],  
      "~/*": ["src/*"]  
    }
  },
  "include": ["src"], 
  "exclude": ["node_modules", "dist"] 
}
